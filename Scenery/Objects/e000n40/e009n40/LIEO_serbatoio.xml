<?xml version="1.0"?>

<PropertyList>

  <path>LIEO_serbatoio.ac</path>

  <animation>
    <type>material</type>
    <object-name>blah</object-name> 
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.6 </red>
      <green> 0.6 </green>
      <blue>  0.6 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>blah</object-name> 
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0.0 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>
 

</PropertyList>
